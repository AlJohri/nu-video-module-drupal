/**
 * Implements hook_field_schema().
 */
function nuamps_video_field_schema($field) {
  return array(
    'columns' => array(
      'url' => array(
        'type' => 'varchar',
        'length' => 2048, // Maximum URLs length.
        'not null' => FALSE,
        'sortable' => TRUE
      ),
      'width' => array(
        'type' => 'int',
        'size' => 'medium',
        'not null' => FALSE
      ),
      'height' => array(
        'type' => 'int',
        'size' => 'medium',
        'not null' => FALSE
      ),
      'fallback' => array(
        'type' => 'varchar',
        'length' => 5,
        'not null' => FALSE
      ),
    ),
  );
}

